# ========================================
# MacTuner 환경 변수 설정 (.env)
# 이 파일을 .env로 복사하여 사용하세요
# ========================================

# ========================================
# 1. Hugging Face 설정
# ========================================
HUGGINGFACE_TOKEN=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
MODEL_CACHE_DIR=~/.cache/huggingface/hub

# ========================================
# 2. API 서버 설정
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ========================================
# 3. 데이터 경로 설정
# ========================================
DATA_DIR=./data
OUTPUT_DIR=./output
LOG_DIR=./logs

# ========================================
# 4. 학습 설정 (기본값)
# ========================================
DEFAULT_BATCH_SIZE=4
DEFAULT_LEARNING_RATE=5e-5
DEFAULT_EPOCHS=3
DEFAULT_WARMUP_STEPS=500

# ========================================
# 5. LoRA 설정 (기본값)
# ========================================
LORA_RANK=8
LORA_ALPHA=16
LORA_DROPOUT=0.1

# ========================================
# 6. RAG 설정 (기본값)
# ========================================
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
RAG_TOP_K=5

# ========================================
# 7. 로깅 설정
# ========================================
LOG_LEVEL=INFO

# ========================================
# 8. 성능 최적화
# ========================================
USE_MAC_MPS=True
GRADIENT_CHECKPOINTING=True
MIXED_PRECISION=auto

# ========================================
# 9. 프로덕션 설정 (배포 시)
# ========================================
ENVIRONMENT=development
